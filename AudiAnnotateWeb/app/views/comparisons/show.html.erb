
<div id='notice-container' class="container">
  <div class="row">
    <div class="col-sm-11" >
      <h2>
        <%= link_to 'My Projects', my_projects_path %> 
        | 
        <%= link_to @comparison.repo_name, project_path(@comparison.user_name, @comparison.repo_name) %>
        |
        <%= link_to @comparison.label, comparison_path(@comparison.user_name, @comparison.repo_name, @comparison.slug) %>      
      </h2>
    </div>
    <%= render 'shared/build_status' %>
  </div>
  <div id="notice"><%= notice %></div>
  The GitHub Pages site for <%= @comparison.label %> is <%= link_to @comparison.uri_root, @comparison.uri_root %><br />
  You can add introductory material by modifying <%= link_to "#{@comparison.slug}.md", "https://github.com/#{@project.user_name}/#{@project.repo_name}/edit/gh-pages/pages/#{@comparison.slug}.md" %>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-11" >
        <p>
          <b>Item A</b>: <%= @comparison.item_a %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-11" >
        <p>
          <b>Item B</b>: <%= @comparison.item_b %>
        </p>
      </div>
    </div>
  </div>


  <div id='actions' class="container">
    <div class="row">
      <%= button_to 'Edit Comparison', edit_comparison_path(@comparison.user_name, @comparison.repo_name, @comparison.slug), method: 'get', class: "btn btn-light" %>
      <%= button_to 'Delete Comparison', destroy_comparison_path(@comparison.user_name, @comparison.repo_name, @comparison.slug), method: 'delete', class: "btn btn-light" %>
    </div>
  </div>
</div>


