<div class="container">
<h2>My Projects</h2>
<div class="card-deck">
  <% @repos.each do |repo| %>
	  <%= render 'projectcard', repo: repo %>
  <% end %>
</div>  


<h2>Shared Projects</h2>
<div class="card-deck">
  <% @shared_repos.each do |repo| %>
    <% detailed_repo = @github_client.repository(repo.full_name, {:headers => { :accept => "application/vnd.github.mercy-preview+json"}}) %>
    <% if detailed_repo.topics && detailed_repo.topics.include?('audiannotate') %>
      <%= render 'projectcard', repo: repo, editable: true %>
    <% end %>
  <% end %>
</div>  



<%= link_to 'New Project', new_project_path, :class => "btn btn-light btn-lg", :role=> "button"%>

</div>